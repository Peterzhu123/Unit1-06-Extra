// This is a program about random number between maxValue and number 

public class random {
	 public static void main(String[] args) {
		 RollDie(50);  
	 }
	 
	 public static void RollDie(int minValue) {
         int number;
		
		 number = minValue + (int)(Math.random() * 100);
		 System.out.println("Your number is  " + minValue);
		 System.out.println("The random number is  " + number);
	 }

}
